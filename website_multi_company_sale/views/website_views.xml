<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_website_multi_company_form" model="ir.ui.view">
        <field name="model">website</field>
        <field
            name="inherit_id"
            ref="website_multi_company.view_website_multi_company_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='shop']" position="inside">
                <group string="Assignation of online orders">
                    <field name="salesperson_id" />
                    <field name="salesteam_id" />
                </group>
            </xpath>
            <xpath expr="//group[@name='shop']" position="after">
                <group>
                    <field name="billing_country_ids" widget="many2many_tags" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
