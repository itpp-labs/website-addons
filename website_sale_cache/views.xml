<odoo>
    <template
        id="category_cached"
        name="Categories Cached"
        inherit_id="website_sale.products_categories"
        priority="8"
    >
        <xpath expr="//t[@t-foreach='categories']" position="replace">
            <span
                t-raw="website.category_cache(category, categories, slug, keep, parent_category_ids)"
            />
        </xpath>
    </template>
    <template id="categories_cache_template" name="cache_template">
        <t t-foreach="categories" t-as="c">
            <t t-call="website_sale.categories_recursive" />
        </t>
    </template>
    <template
        id="collapsible_categories_list_cached"
        name="Collapsible Category List Cached"
        inherit_id="website_sale.option_collapse_products_categories"
        priority="8"
    >
        <xpath expr="//t[@t-foreach='categories']" position="replace">
            <span
                t-raw="website.category_cache(category, categories, slug, keep, parent_category_ids, collapsed=True)"
            />
        </xpath>
    </template>
    <template
        id="categories_collapsed_cache_template"
        name="Cache Collapse Category Recursive"
    >
        <t t-foreach="categories" t-as="categ">
            <t t-call="website_sale.option_collapse_categories_recursive" />
        </t>
    </template>
</odoo>
