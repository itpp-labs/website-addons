<odoo noupdate="0">
    <template
        id="website_sale_checkout_store_assets_frontend"
        name="website_sale_checkout_store assets"
        inherit_id="website_sale.assets_frontend"
    >
        <xpath expr="." position="inside">
            <script
                src="/website_sale_checkout_store/static/src/js/website_sale_tour_mandatory_1.js"
                type="text/javascript"
            />
            <script
                src="/website_sale_checkout_store/static/src/js/website_sale_tour_mandatory_2.js"
                type="text/javascript"
            />
            <script
                src="/website_sale_checkout_store/static/src/js/website_sale_tour_mandatory_3.js"
                type="text/javascript"
            />
            <script
                src="/website_sale_checkout_store/static/src/js/website_sale_tour_mandatory_4.js"
                type="text/javascript"
            />
            <link
                rel="stylesheet"
                href="/website_sale_checkout_store/static/src/css/website_sale_checkout_store.css"
            />
        </xpath>
    </template>
    <template
        id="website_sale_checkout_store_cart"
        name="my_cart"
        inherit_id="website_sale.cart"
        priority="50"
    >
        <xpath
            expr="//div[hasclass('row')]//a[hasclass('btn','btn-primary','pull-right')][@href='/shop/checkout']"
            position="replace"
        >
            <t t-if="not hide_checkout_button">
                <t
                    t-set="button_class"
                    t-value="suggest_create_account and 'btn btn-default pull-right' or 'btn btn-primary pull-right'"
                />
                <!--<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>-->
                <t t-set="website_sale_order" t-value="website.sale_get_order()" />
                <t
                    t-set="nobill_noship"
                    t-value="website.env['ir.config_parameter'].sudo().get_param('website_sale_checkout_store.nobill_noship')"
                />
                <t
                    t-set="bill_noship"
                    t-value="website.env['ir.config_parameter'].sudo().get_param('website_sale_checkout_store.bill_noship')"
                />
                <t
                    t-set="bill_ship"
                    t-value="website.env['ir.config_parameter'].sudo().get_param('website_sale_checkout_store.bill_ship')"
                />
                <t
                    t-set="nobill_ship"
                    t-value="website.env['ir.config_parameter'].sudo().get_param('website_sale_checkout_store.nobill_ship')"
                />
                <t
                    t-set="default_option"
                    t-value="website.env['ir.config_parameter'].sudo().get_param('website_sale_checkout_store.default_option')"
                />
                <t
                    t-set="list_options"
                    t-value="[nobill_noship, bill_noship, bill_ship, nobill_ship]"
                />
                <div class="pull-right">
                    <div>
                        <a
                            t-if="nobill_noship and not optional_products and website_sale_order and website_sale_order.website_order_line"
                            id="nobill_noship"
                            t-att-class="button_class"
                            href="/shop/checkout?buyMethod=nobill_noship"
                            style="width: 100%; margin-bottom: 5px"
                        >
                            <span class="hidden-xs">Pickup and pay at store</span>
                            <span
                                class="visible-xs-inline"
                            >Pickup and pay at store</span>
                            <span class="fa fa-long-arrow-right" />
                        </a>
                    </div>
                    <div>
                        <a
                            t-if="bill_noship and not optional_products and website_sale_order and website_sale_order.website_order_line"
                            id="bill_noship"
                            t-att-class="button_class"
                            href="/shop/checkout?buyMethod=bill_noship"
                            style="width: 100%; margin-bottom: 5px"
                        >
                            <span class="hidden-xs">Pickup at store but pay now</span>
                            <span
                                class="visible-xs-inline"
                            >Pickup at store but pay now</span>
                            <span class="fa fa-long-arrow-right" />
                        </a>
                    </div>
                    <div>
                        <a
                            t-if="bill_ship and not optional_products and website_sale_order and website_sale_order.website_order_line"
                            id="bill_ship"
                            t-att-class="button_class"
                            href="/shop/checkout?buyMethod=bill_ship"
                            style="width: 100%; margin-bottom: 5px"
                        >
                            <span class="hidden-xs">Pay now and get delivery</span>
                            <span
                                class="visible-xs-inline"
                            >Pay now and get delivery</span>
                            <span class="fa fa-long-arrow-right" />
                        </a>
                    </div>
                    <div>
                        <a
                            t-if="nobill_ship and not optional_products and website_sale_order and website_sale_order.website_order_line"
                            id="nobill_ship"
                            t-att-class="button_class"
                            href="/shop/checkout?buyMethod=nobill_ship"
                            style="width: 100%; margin-bottom: 5px"
                        >
                            <span class="hidden-xs">Pay on delivery</span>
                            <span class="visible-xs-inline">Pay on delivery</span>
                            <span class="fa fa-long-arrow-right" />
                        </a>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
    <template id="checkout" name="my_checkout" inherit_id="website_sale.checkout">
        <xpath
            expr="//div[hasclass('container','oe_website_sale')]"
            position="attributes"
        >
            <attribute name="t-attf-ship_enabled">#{ship_enabled}</attribute>
            <attribute name="t-attf-bill_enabled">#{bill_enabled}</attribute>
        </xpath>
        <xpath expr="//div[hasclass('row','all_shipping')]" position="attributes">
            <attribute name="t-att-ship">1</attribute>
        </xpath>
        <xpath
            expr="//div[hasclass('col-md-12') and ./h2[contains(.,'Shipping Address')]]"
            position="attributes"
        >
            <attribute name="t-att-ship">1</attribute>
        </xpath>
    </template>
    <template id="address" name="my_checkout" inherit_id="website_sale.address">
        <xpath
            expr="//div[hasclass('container','oe_website_sale')]"
            position="attributes"
        >
            <attribute name="t-attf-ship_enabled">#{ship_enabled}</attribute>
            <attribute name="t-attf-bill_enabled">#{bill_enabled}</attribute>
        </xpath>
        <xpath expr="//input[@name='street']/.." position="attributes">
            <attribute name="ship">1</attribute>
        </xpath>
        <xpath expr="//input[@name='street2']/.." position="attributes">
            <attribute name="style">display: none</attribute>
        </xpath>
        <xpath expr="//input[@name='city']/.." position="attributes">
            <attribute name="ship">1</attribute>
        </xpath>
        <xpath expr="(//input[@name='zip'])[1]/.." position="attributes">
            <attribute name="ship">1</attribute>
        </xpath>
        <xpath expr="(//input[@name='zip'])[2]/.." position="attributes">
            <attribute name="ship">1</attribute>
        </xpath>
        <xpath expr="//input[@name='company_name']/.." position="attributes">
            <attribute name="ship">1</attribute>
        </xpath>
        <xpath expr="//select[@name='country_id']/.." position="attributes">
            <attribute name="ship_bill">1</attribute>
        </xpath>
        <xpath expr="//select[@name='state_id']/.." position="attributes">
            <attribute name="ship_bill">1</attribute>
        </xpath>
        <xpath expr="//input[@name='vat']/.." position="attributes">
            <attribute name="style">display: none</attribute>
        </xpath>
        <xpath expr="//h2" position="replace">
            <t t-if="shipping == '0' and billing == '0'">
                <h2 class="page-header mt16">Contact Information
                        <small> or </small>
                        <t
                        t-set='connect'
                        t-value="request.env['ir.config_parameter'].sudo().get_param('auth_signup.allow_uninvited') == 'True' and ('signup', 'Sign Up') or ('login', 'Log In')"
                    />
                        <a
                        t-attf-href='/web/{{connect[0]}}?redirect=/shop/checkout'
                        class='btn btn-primary'
                        style="margin-top: -11px"
                    >
                        <t t-esc='connect[1]' />
                    </a>
                    </h2>
            </t>
            <t t-else="">
                <h2 class="page-header mt16">Your Address
                        <small> or </small>
                        <t
                        t-set='connect'
                        t-value="request.env['ir.config_parameter'].sudo().get_param('auth_signup.allow_uninvited') == 'True' and ('signup', 'Sign Up') or ('login', 'Log In')"
                    />
                        <a
                        t-attf-href='/web/{{connect[0]}}?redirect=/shop/checkout'
                        class='btn btn-primary'
                        style="margin-top: -11px"
                    >
                        <t t-esc='connect[1]' />
                    </a>
                    </h2>
            </t>
        </xpath>
    </template>
    <template
        id="website_sale_checkout_store_wizard_checkout"
        name="my_wizard_checkout"
        inherit_id="website_sale.wizard_checkout"
    >
        <xpath expr="//li[@id='step40']" position="attributes">
            <attribute name="bill">1</attribute>
        </xpath>
    </template>
    <template id="payment" inherit_id="website_sale.payment" name="Payment">
        <xpath expr="//div[@id='payment_method']" position="replace">
            <!-- based on https://github.com/odoo/odoo/blob/9e67525418b3b0a48a796044ef24b227946ceb8f/addons/website_sale/views/templates.xml#L1318 -->
            <div
                id="payment_method"
                class="col-md-12 o_website_sale_rightfit"
                t-if="(form_acquirers or s2s_acquirers or tokens) and website_sale_order.amount_total and bill_enabled=='1'"
            >
                <h3 class="mb24">Pay with </h3>
                <t t-call="payment.payment_tokens_list">
                    <t t-set="mode" t-value="'payment'" />
                    <t t-set="submit_txt">Pay Now</t>
                    <t t-set="icon_class" t-value="'fa-lock'" />
                    <t t-set="pms" t-value="tokens" />
                    <t t-set="form_action" t-value="'/shop/payment/token'" />
                    <t t-set="prepare_tx_url" t-value="'/shop/payment/transaction/'" />
                    <t t-set="partner_id" t-value="partner" />
                </t>
            </div>
            <!-- based on https://github.com/odoo/odoo/blob/9e67525418b3b0a48a796044ef24b227946ceb8f/addons/website_sale/views/templates.xml#L1338 -->
            <div
                class="js_payment mb64 row"
                t-if="(not website_sale_order.amount_total) and bill_enabled=='1'"
                id="payment_method"
            >
                <div class="col-sm-12">
                    <form
                        target="_self"
                        action="/shop/payment/validate"
                        method="post"
                        class="pull-right"
                    >
                        <input
                            type="hidden"
                            name="csrf_token"
                            t-att-value="request.csrf_token()"
                        />
                        <a class="btn btn-primary a-submit">
                            <span t-if="order.amount_total &gt; 0">Pay Now <span
                                    class="fa fa-long-arrow-right"
                                /></span>
                            <span t-if="order.amount_total == 0">Confirm Order <span
                                    class="fa fa-long-arrow-right"
                                /></span>
                        </a>
                    </form>
                </div>
            </div>
            <div
                class="js_payment mb64 row"
                t-if="bill_enabled=='0'"
                id="payment_method"
            >
                <div class="col-sm-12">
                    <form
                        target="_self"
                        action="/shop/payment/validate"
                        method="post"
                        class="pull-right"
                    >
                        <input
                            type="hidden"
                            name="csrf_token"
                            t-att-value="request.csrf_token()"
                        />
                        <a class="btn btn-primary a-submit">
                            <span>Confirm Order <span
                                    class="fa fa-long-arrow-right"
                                /></span>
                        </a>
                    </form>
                </div>
            </div>
        </xpath>
    </template>
    <template
        id="website_sale_checkout_store_confirmation"
        name="my_confirmation"
        inherit_id="website_sale.confirmation"
    >
        <xpath expr="//div[hasclass('oe_cart')]/table[2]/tr" position="after">
            <t t-if="order.delivery_method_information">
                <tr>
                    <td colspan="2">
                        <strong>Delivery:</strong>
                        <t t-esc="order.delivery_method_information" />
                    </td>
                </tr>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('oe_cart')]/table[2]/tr/td" position="replace">
            <t t-if="not order.payment_acquirer_id.name">
                <td class="col-md-8">
                    <strong>Payment:</strong>
                    <t t-esc="order.payment_method_information" />
                </td>
            </t>
            <t t-if="order.payment_acquirer_id.name">
                <td class="col-md-8">
                    <strong>Payment Method:</strong>
                    <t t-esc="order.payment_acquirer_id.name" />
                </td>
            </t>
        </xpath>
    </template>
    <template
        id="orders_followup"
        name="Sales Order"
        inherit_id="sale.portal_order_page"
    >
        <xpath expr="//div[hasclass('panel-body')]/div[1]" position="after">
            <div class="mb8">
                <t t-if="order.payment_method_information">
                    <strong>Payment:</strong>
                    <span t-field="order.payment_method_information" />
                </t>
                <br />
                <t t-if="order.delivery_method_information">
                    <strong>Delivery:</strong>
                    <span t-field="order.delivery_method_information" />
                </t>
            </div>
        </xpath>
    </template>
