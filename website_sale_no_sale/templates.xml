<odoo>
    <template
        id="hide_products_prices"
        name="Hide Prices"
        inherit_id="website_sale.products_item"
        active="False"
        customize_show="True"
        priority="23"
    >
        <xpath
            expr="//div[hasclass('product_price')]//span[@t-esc='product.website_price']"
            position="replace"
        />
    </template>
    <template
        id="hide_add_to_cart"
        inherit_id="website_sale.product"
        active="False"
        customize_show="True"
        name="Hide Add to Cart"
        priority="24"
    >
        <a id="add_to_cart" position="attributes">
            <attribute
                name="class"
            >btn btn-primary btn-lg mt8 js_check_product a-submit o_hidden</attribute>
        </a>
    </template>
    <template
        id="hide_price"
        inherit_id="website_sale.product"
        active="False"
        customize_show="True"
        name="Hide Price"
        priority="24"
    >
        <xpath expr="//t[@t-call='website_sale.product_price']" position="replace" />
        <xpath expr="//t[@t-call='website_sale.variants']/*" position="replace">
            <t t-set="ul_class" t-value="'nav-stacked'" />
            <t t-set="hide_price" t-value="1" />
        </xpath>
    </template>
    <template id="hide_variants_price_badge" inherit_id="website_sale.variants">
        <xpath expr="//span[hasclass('badge')]" position="replace">
            <span class="badge" t-if="value_id.price_extra and not hide_price">
                <t t-esc="value_id.price_extra > 0 and '+' or ''" />
                <span
                    t-field="value_id.price_extra"
                    style="white-space: nowrap;"
                    t-options='{
                         "widget": "monetary",
                         "from_currency": product.currency_id,
                         "display_currency": website.currency_id
                         }'
                />
            </span>
        </xpath>
    </template>
</odoo>
